import sys
import re

#Uses reg. expressions to look for '@' and '.' within a given string
#both symbols must be present and in between other characters to be valid
def validate(line):
   #isValid = re.match(r'(.+)@(.+)\.(.+)', line, re.I)
   #isValid = re.match(r'([^@])+@([^@.])+\.([^.])+$', line, re.I)
   #isValid = re.match(r'([^@]+)@([^@.]+)\.([^.]+)', line, re.I)
   isValid = re.match(r'^(([\w\.\+-]+)|(".*"))@[\w\.-]+\.([a-z]){3}$', line)
   #isValid = re.match(r'[a-z0-9]*@[a-z0-9]*\.[a-z0-9]*', line, re.I)
   if isValid:
      #print isValid.group()
      #print isValid.group(1)
      #print isValid.group(2)
      #print isValid.group(3)
      return 'true'
   return 'false'

def main():
   lines = open(sys.argv[1], 'r')
   content = lines.readlines()
   for i in range(len(content)):
      line = content[i]
      #line = content[i].rstrip('/n')
      print(validate(line))

main()
